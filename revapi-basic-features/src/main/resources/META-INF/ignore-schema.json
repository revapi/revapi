{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "regex": {
                "type": "boolean",
                "default": "false"
            },
            "code": {
                "type": "string"
            },
            "old": {
                "type": "string"
            },
            "new": {
                "type": "string"
            },
            "justification": {
                "type": "string"
            }
        },
        "additionalProperties": {
            "type": "string"
        },
        "required": [ "code", "justification" ]
    }
}
