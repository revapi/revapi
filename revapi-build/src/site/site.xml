<project name="Revapi">
  <bannerLeft>
    <name>${project.name}</name>
    <href>${project.url}</href>
  </bannerLeft>

  <skin>
    <groupId>pl.matsuo.maven.skins</groupId>
    <artifactId>msb3-maven-skin</artifactId>
    <version>0.1.1</version>
  </skin>

  <body>
    <head><![CDATA[
      <link rel="alternate" type="application/rss+xml" title="Revapi News" href="${web.url}/news.atom" />
    ]]></head>

    <links>
      <item name="Online Check" href="https://diff.revapi.org"/>
      <item name="News" href="${web.url}/news.html"/>
      <item name="Getting Started" href="${web.url}/getting-started.html"/>
      <item name="FAQ" href="${web.url}/faq.html"/>
      <item name="Downloads" href="${web.url}/downloads.html"/>
    </links>

    <menu name="Basic Info" inherit="top">
      <item name="Architecture" href="${web.url}/architecture.html"/>
      <item name="Configuration" href="${web.url}/configuration.html"/>
      <item name="Building" href="${web.url}/building.html"/>
      <item name="Extensions" href="${web.url}/extensions.html"/>
    </menu>

    <menu name="Sub Projects" inherit="top">
      <item name="Maven Plugin" href="${web.url}/modules/revapi-maven-plugin/index.html"/>
      <item name="Gradle Plugin (external)" href="https://github.com/palantir/gradle-revapi" />
      <item name="Ant Task" href="${web.url}/modules/revapi-ant-task/index.html"/>
      <item name="Revapi API" href="${web.url}/modules/revapi/index.html"/>
      <item name="Basic Features" href="${web.url}/modules/revapi-basic-features/index.html"/>
      <item name="Java Extension" href="${web.url}/modules/revapi-java/index.html"/>
      <item name="Java Extension SPI" href="${web.url}/modules/revapi-java-spi/index.html"/>
      <item name="File-based Reporters" href="${web.url}/modules/revapi-reporter-file-base/index.html"/>
      <item name="Text Report Extension" href="${web.url}/modules/revapi-reporter-text/index.html"/>
      <item name="JSON Report Extension" href="${web.url}/modules/revapi-reporter-json/index.html"/>
    </menu>

    <menu name="Maven Documentation" ref="reports" inherit="bottom"/>
  </body>

  <custom>
    <msb3Skin>
      <theme>bootswatch-3/cosmo</theme>
      <highlightJs>true</highlightJs>
      <toc>sidebar</toc>
      <slogan>${project.description}</slogan>
      <breadcrumbs>false</breadcrumbs>
      <topNav>Basic Info|Sub Projects|Project Details</topNav>
      <bottomNav>
        <column>Basic Info|Sub Projects</column>
        <column>Project Details</column>
        <column>Maven Documentation</column>
      </bottomNav>
      <bottomDescription>Revapi</bottomDescription>
      <brand>
        <name>Revapi</name>
        <href>${web.url}</href>
      </brand>
      <endContent>
        <script id="dsq-count-scr" src="//revapi-org.disqus.com/count.js" async="true"></script>
        <!-- Fathom - simple website analytics - https://github.com/usefathom/fathom -->
        <script>
          (function(f, a, t, h, o, m){
          a[h]=a[h]||function(){
          (a[h].q=a[h].q||[]).push(arguments)
          };
          o=f.createElement('script'),
          m=f.getElementsByTagName('script')[0];
          o.async=1; o.src=t; o.id='fathom-script';
          m.parentNode.insertBefore(o,m)
          })(document, window, '//stats.revapi.org/tracker.js', 'fathom');
          fathom('set', 'siteId', 'MDATT');
          fathom('trackPageview');
        </script>
        <!-- / Fathom -->
      </endContent>
    </msb3Skin>
  </custom>

  <publishDate position="navigation-bottom"/>
  <version position="navigation-bottom"/>
</project>
